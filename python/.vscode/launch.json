  "version": "0.2.0",
  "configurations": [
    {
      "name": "HireApt",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "--noreload", "--nothreading", "5000"]
    },
    {
      "name": "Python: Celery",
      "type": "debugpy",
      "module": "celery",
      "args": [
        "-A",
        "hireapt",
        "worker",
        "--loglevel=info",
        "--beat",
        "--pool=solo",
        "--concurrency=1",
        "--events",
        "-n hireapt"
      ],
      "request": "launch"
    }
  ]
}
